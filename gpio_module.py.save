import RPi.GPIO as GPIO
import time

def digital_read(pin,mode=GPIO.BOARD):
	if(pin==None):
		print("Please specify the pin no.")
		return
	else:
		GPIO.setmode(mode)
		GPIO.setup(pin,GPIO.IN)
		return GPIO.input(pin)

